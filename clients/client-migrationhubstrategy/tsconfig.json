{
  "compilerOptions": {
    "rootDir": "./src",
    "alwaysStrict": true,
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist-cjs",
    "removeComments": true
  },
  "exclude": ["test/**/*"]
}
