{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es5",
            "es2015.promise",
            "es2015.collection"
        ],
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "rootDir": "./src",
        "outDir": "./build",
        "importHelpers": true,
        "noEmitHelpers": true
    },
    "exclude": [
        "./src/**/*.spec.ts",
        "./build/**"
    ]
}