{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": ["es5", "es2015.promise", "es2015.iterable"],
    "rootDir": "./src",
    "outDir": "./build",
    "incremental": true
  }
}
