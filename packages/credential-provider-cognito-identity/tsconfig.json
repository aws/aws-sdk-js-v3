{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "lib": ["dom"],
    "rootDir": "./src",
    "outDir": "dist/cjs",
    "incremental": true,
    "declarationDir": "./dist/cjs",
    "noUnusedLocals": true
  }
}
